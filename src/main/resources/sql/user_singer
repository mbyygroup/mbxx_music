CREATE TABLE `USER_SINGER` (
`USER_ID` bigint(20) NOT NULL AUTO_INCREMENT COMMENT '表ID，主键',
`USERNAME` varchar(30) NOT NULL COMMENT '歌手名',
`SINGER_EXPLAIN` varchar(1024) DEFAULT NULL COMMENT '艺人介绍',
`TYPE_1` varchar(30) DEFAULT NULL COMMENT '类型1',
`TYPE_2` varchar(30) DEFAULT NULL COMMENT '类型2',
`TYPE_3` varchar(30) DEFAULT NULL COMMENT '类型3',
`COUNTRY` varchar(30) DEFAULT '中国' COMMENT '国籍',
`SEX` int(1) DEFAULT NULL COMMENT '性别：1-男；0-女',
PRIMARY KEY (`USER_ID`),
UNIQUE KEY `USERNAME` (`USERNAME`)
)ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8 COMMENT='歌手信息';